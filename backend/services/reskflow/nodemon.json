{
  "watch": [
    "src/**/*.ts",
    "src/**/*.js",
    ".env"
  ],
  "ext": "ts,js,json",
  "ignore": [
    "node_modules/**/*",
    "dist/**/*",
    "logs/**/*",
    "uploads/**/*",
    "*.test.ts",
    "*.spec.ts",
    "coverage/**/*"
  ],
  "exec": "ts-node --transpile-only src/index.ts",
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "reskflow:*"
  },
  "restartable": "rs",
  "colours": true,
  "verbose": true,
  "delay": 1000,
  "runOnChangeOnly": false,
  "inspect": false,
  "signal": "SIGTERM",
  "events": {
    "start": "echo \"ðŸš€ Delivery service starting...\"",
    "restart": "echo \"ðŸ”„ Delivery service restarting due to file changes...\"",
    "crash": "echo \"ðŸ’¥ Delivery service crashed!\"",
    "exit": "echo \"ðŸ‘‹ Delivery service stopped.\""
  },
  "legacy": false
}