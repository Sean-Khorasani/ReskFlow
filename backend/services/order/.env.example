# Application
NODE_ENV=development
PORT=3005
SERVICE_NAME=order-service

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/reskflow_orders

# MongoDB (for order documents)
MONGODB_URI=mongodb://localhost:27017/reskflow_orders

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_URL=amqp://localhost:5672

# JWT
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# Service URLs
CART_SERVICE_URL=http://localhost:3002
CATALOG_SERVICE_URL=http://localhost:3004
PAYMENT_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3006
DELIVERY_SERVICE_URL=http://localhost:3007
MERCHANT_SERVICE_URL=http://localhost:3008

# Order Configuration
ORDER_TIMEOUT_MINUTES=30
MAX_ORDER_ITEMS=50
ORDER_CANCELLATION_WINDOW_MINUTES=5

# Invoice Configuration
INVOICE_STORAGE_PATH=/tmp/invoices
COMPANY_NAME=ReskFlow
COMPANY_ADDRESS=123 Main St, City, Country
COMPANY_TAX_ID=123456789

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json